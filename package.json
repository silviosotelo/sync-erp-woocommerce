{
  "name": "sync-erp-woocommerce",
  "version": "2.0.0",
  "description": "Sincronizador bidireccional ERP ↔ WooCommerce con dashboard de monitoreo y cron job automático",
  "main": "app.js",
  "scripts": {
    "start": "node start.js",
    "dev": "node start.js --dev",
    "test": "node test-sync.js",
    "test:quick": "node test-sync.js --quick",
    "sync": "node sync-enhanced.js",
    "sync:once": "node -e \"require('./sync-enhanced').main()\"",
    "setup": "node setup.js",
    "troubleshoot": "node troubleshoot.js",
    "diagnose": "node troubleshoot.js",
    "install-service": "node install-service.js",
    "uninstall-service": "node uninstall-service.js",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "health": "node scripts/health-check.js",
    "init-db": "node scripts/init-database.js",
    "logs": "tail -f logs/$(date +%Y-%m-%d).log",
    "status": "curl -s http://localhost:3001/health | jq .",
    "cron:status": "curl -s http://localhost:3001/api/cron/status | jq .",
    "cron:start": "curl -X POST http://localhost:3001/api/cron/start",
    "cron:stop": "curl -X POST http://localhost:3001/api/cron/stop",
    "dashboard": "open http://localhost:3001",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf logs/* backups/* tmp/* node_modules/.cache",
    "reset": "npm run clean && npm install",
    "update": "npm update && npm audit fix",
    "docker:build": "docker build -t sync-erp-woocommerce .",
    "docker:run": "docker run -p 3001:3001 sync-erp-woocommerce",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop sync-erp-woocommerce",
    "pm2:restart": "pm2 restart sync-erp-woocommerce",
    "pm2:logs": "pm2 logs sync-erp-woocommerce",
    "pm2:status": "pm2 status",
    "postinstall": "node -e \"console.log('\\n🎉 Instalación completada!\\n📋 Siguiente paso: npm run setup\\n🚀 Luego ejecuta: npm start\\n')\"",
    "prestart": "node -e \"if (!require('fs').existsSync('.env')) { console.log('⚠️ Archivo .env no encontrado. Ejecuta: npm run setup'); process.exit(1); }\"",
    "prepare": "node -e \"['logs','backups','tmp'].forEach(d => require('fs').existsSync(d) || require('fs').mkdirSync(d, {recursive: true}))\""
  },
  "keywords": [
    "woocommerce",
    "erp",
    "synchronization",
    "ecommerce",
    "mysql",
    "dashboard",
    "cron",
    "automation",
    "farmatotal",
    "pharmacy"
  ],
  "author": {
    "name": "Tu Empresa",
    "email": "dev@tuempresa.com",
    "url": "https://tuempresa.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tu-usuario/sync-erp-woocommerce.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/sync-erp-woocommerce/issues"
  },
  "homepage": "https://github.com/tu-usuario/sync-erp-woocommerce#readme",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^6.7.18",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lockfile": "^1.0.4",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "mysql": "^2.18.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.32.6",
    "twilio": "^4.20.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "optionalDependencies": {
    "node-windows": "^1.0.0-beta.8",
    "pm2": "^5.3.0",
    "pm2-windows-startup": "^1.0.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "files": [
    "app.js",
    "sync-enhanced.js",
    "start.js",
    "setup.js",
    "troubleshoot.js",
    "test-sync.js",
    "api-endpoints.js",
    "dashboard-server.js",
    "install-service.js",
    "uninstall-service.js",
    "ecosystem.config.js",
    "scripts/",
    "dashboard/",
    "README.md",
    "guia.md"
  ],
  "config": {
    "port": "3001",
    "logLevel": "INFO",
    "syncInterval": "10"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/tu-usuario"
  }
}
